{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "importHelpers": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "paths": {
            "@app/*": ["app/*"]
        },
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"]
    }
}
